#include <stdio.h>

//Sessão de prototipação
void menu(int);
void selectionSort(int *, int);
void bubbleSort(int *, int);
void insertionSort(int *, int);

int main()
{
    int opcao; 
    
    printf("-- Menu de Métodos de Ordenação --\n\n");
    printf("1 - Bubble Sort \n");
    printf("2 - Selection Sort \n");
    printf("3 - Insertion Sort \n");
    printf("3 - Insertion Sort \n");
    printf("4 - Bubble \n\n");
    
    
    printf("Digite uma opçao ");
    scanf("%d", &opcao);
    
    menu(opcao);
    
    //vetor randomico
    
    srand(time(NULL));  // Inicializa o gerador de números aleatórios

    int vetor[100];
      
    for (int i = 0; i < 100; i++) { // Preenche o vetor com valores aleatórios
        vetor[i] = rand(); // Gera um valor aleatório entre 0 e RAND_MAX
      }
    
      for (int i = 0; i < 100; i++) {
        printf("%d ", vetor[i]);
      }
      printf("\n");

    return 0;
}

//menu
void menu(int opcao){
    switch(opcao){
        case 1:
        printf("eae");
        break;
        
        case 2:
        printf("e nois");
        break;
    }
}
//fim do menu

//selection Sort
void selectionSort(){
    
    while(i < tam){
		menor = i;
		j = i+1;
		do{
			if(vet[j] < vet[menor]){
				menor = j;
				j++;
			}
		}while(j < tam);
		
		if(i != menor){
		aux = vet[i];
		vet[i] = vet[menor];
		vet[menor] = aux;
	}
	i++;
	}
}
//fim selection Sort

//bubble sort
void bubbleSort(){
    while(tam > 0){
		for(i = 0; i < tam-1; i++){
			if(vetor[i] > vetor[i+1]){
				aux = vetor[i+1];	// Variavel auxiliar
				vetor[i+1] = vetor[i];
				vetor[i] = aux;
				troca++;
			};
			comp++;
		};
		tam--;
	};
}
//fim do bubble sort

//insertion sort
void insertionSort(int vet[], int tam){
	int i, j, k, chave;
	
	for(i=0; i < tam; i++){
		chave = vet[i];
		j = i - 1;
		
		while(j >= 0 && vet[j] > chave){
			vet[j + 1] = vet[j];
			j = j - 1;
		}
		vet[j+1] = chave;
	}
}
//fim do insertion sort
